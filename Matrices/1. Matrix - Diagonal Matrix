#include <iostream>
#include <stdio.h>
#include <stdlib.h>

using namespace std;

class Matrix{
	private:
		int *A;
		int n;
	public:
		
		Matrix(int x){
			n=x;
			A = new int[n];
		}

		void Set(int i, int j, int x){
			if(i==j){
				A[i-1] = x ;
			}
		}	
		
		int Get(int i, int j){
			if(i==j){
				return A[i-1];
			}
			else{
				return 0;
			}
		}

		void Display(){
			for(int i=1; i<=n; i++){
				for(int j=1; j<=n; j++){
					if(i==j){
						cout<<A[i-1]<<" ";
					}
					else{
						cout<<0<<" ";
					}
				}
				cout<<endl;
			}
		}	
		
		
};

	
int main() {
	Matrix arr(5);
	arr.Set(1, 1, 1);
	arr.Set(2, 2, 2);
	arr.Set(3, 3, 3);
	arr.Set(4, 4, 4);
	arr.Set(5, 5, 5);
	
	cout<<arr.Get(1, 1)<<" ";
	cout<<arr.Get(2, 2)<<" ";
	cout<<arr.Get(3, 3)<<" ";
	cout<<arr.Get(4, 4)<<" ";
	cout<<arr.Get(5, 5)<<" ";
	cout<<endl<<endl;
	
	
	arr.Display();
	
	return 0;
}
