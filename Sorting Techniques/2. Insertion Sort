/*
    0. Time Complexity: O(N^2)
        Min: O(N)
        Max: O(N^2)

    1. No. Of Comaprisons: O(N^2)
    2. No. Of Swaps: O(N^2)
    3. Adaptive: Yes
    4. Stable: Yes
    5. Extra Memory: No
*/

#include <iostream>

using namespace std;

void InsertionSort(int A[], int n) {
    int x;
    for (int i = 1; i < n; i++) {
        int j = i - 1;
        x = A[i];
        while (j > -1 && A[j] > x) {
            A[j + 1] = A[j];
            j--;
        }
        A[j + 1] = x;
    }
}

int main()
{
    int A[] = { 7,6,9,0,5,1,2 };
    int n = 7;
    InsertionSort(A, n);

    for (int k = 0; k < n; k++) {
        cout << A[k] << " ";
    }


}
