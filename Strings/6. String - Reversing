#include <iostream>
#include <stdio.h>
#include <stdlib.h>

using namespace std;


int main() {
	
	//1st method for reversing
		
	char A[] = "python";
	char B[7];
	int i=0;
	int j=0;
	
	for(i=0; A[i]!='\0'; i++){
	}
	i=i-1;
	
	for(j=0; i>=0; i--,j++){
		B[j] = A[i];
	}
	B[j] = '\0';
	
	cout<<B<<endl<<endl;
	
	//2nd method for reversing (Swapping in the same Array)
	
	char C[] = "lolz";
	int t;
	 
	for(j=0; C[j]!='\0'; j++){
	}
	j=j-1;
	
	for(i=0; i<j; i++,j--){
		t= C[i];
		C[i] = C[j];
		C[j] = t;
	}
	
	cout<<C<<endl;
	
	return 0;
}
